<div class="container mt-4">
  <h1 class="mb-4">New Entry</h1>

  <%= form_with model: Entry.new, local: true, class: 'needs-validation', novalidate: true do |form| %>
    <div class="mb-3">
      <%= form.label :title, class: 'form-label' %>
      <%= form.text_field :title, class: 'form-control', required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :description, class: 'form-label' %>
      <%= form.text_area :description, class: 'form-control', rows: 3, required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :occurred_on, "Occurred On", class: 'form-label' %>
      <%= form.date_field :occurred_on, class: 'form-control', required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :image, class: 'form-label' %>
      <%= form.file_field :image, accept: "image/png,image/jpg,image/jpeg,image/gif", class: 'form-control' %>
    </div>

    <%= form.hidden_field :place_id, value: params[:place_id] %>

    <%= form.submit "Save", class: 'btn btn-primary' %>
  <% end %>
</div>
<div class="container mt-4">
  <h1>New Place</h1>

  <%= form_with(url: places_path, method: "post", local: true) do |form| %>
    <div class="mb-3">
      <%= form.label :name, 'Name', class: 'form-label', for: 'name_input' %>
      <%= form.text_field :name, id: 'name_input', class: 'form-control' %>
    </div>

    <%= form.submit 'Save', class: 'btn btn-primary' %>
  <% end %>
</div>
<!DOCTYPE html>
<html>
<head>
  <title>Tacostagram Final</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/stylesheets/application.css">

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
  
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <%= link_to 'Tacostagram Final', root_path, class: 'navbar-brand' %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <%= link_to 'Home', root_path, class: 'btn btn-success nav-link' %>
        </li>
        <% if session[:user_id] %>
          <li class="nav-item">
            <span class="nav-link">Logged in as: <%= User.find(session[:user_id]).username %></span> <!-- Display username -->
          </li>
          <li class="nav-item">
            <%= form_with url: logout_path, method: :delete, local: true do |form| %>
              <%= form.submit "Logout", class: "btn btn-outline-danger nav-link"%>
            <% end %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to 'Login', login_path, class: 'btn btn-outline-primary nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Signup', signup_path, class: 'btn btn-outline-primary nav-link' %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>

<div class="container mt-4">
  <%= flash.notice %>
  <%= flash.alert %>
  <%= yield %>
</div>

<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js" integrity="sha384-Ltrj3KmYOOO9f3R5h5JJTjssWYo9WlW/5aezCJ/Zdvdu4GWo3VVWijc8f2EWqbHa" crossorigin="anonymous"></script>
</body>
</html>